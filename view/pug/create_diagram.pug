doctype html
html(lang=ja)
  head
    meta(charset='utf-8')
    include template/_bootstrap
    link(rel='stylesheet' href='/css/typeaheadjs.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.15.0/lodash.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.26/vue.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.bundle.min.js')
    script(src='/js/common.js')
    script(src='/js/create_diagram.js')
    title Create Diagram
  body
    .jumbotron
      h1 Create Diagram
    .container(role=main)
      form#createDiagram.form-horizontal
        .form-group
          label.col-sm-3.control-label(for='name') Name
          .col-sm-9
            input#name.form-control(type='text', v-model='name')
        .form-group
          label.col-sm-3.control-label(for='trainType') TrainType
          .col-sm-9
            select#trainType.form-control(v-model='trainType')
              option(v-for='t in types', value='{{ t.value }}') {{ t.name }}
        .form-group
          label.col-sm-3.control-label(for='subType') Subtype
          .col-sm-9
            input#subType.form-control(type='text', v-model='subType')
        .form-group
          label.col-sm-3.control-label(for='starts') Train Times
          .col-sm-9
            textarea#starts.form-control(type='text', v-model='starts')
        .form-group
          .col-sm-1.col-sm-offset-3
            label Pattern
          .col-sm-2
            input#patternStart.form-control(type='text', v-model='pattern.start')
          .col-sm-2
            input#patternEnd.form-control(type='text', v-model='pattern.end')
          .col-sm-2
            input#patternPeriod.form-control(type='number', v-model='pattern.period')
          .col-sm-2
            button.btn.btn-default.form-control(type='button', v-on:click='pushPattern()') Push
        .form-group
          label.col-sm-7.control-label Station
          label.col-sm-5.control-label Minutes
        .form-group(v-for='stop in stops')
          .col-sm-7
            input.form-control.autoCompleteStation(autocomplete='off', v-model='stop.name')
          .col-sm-5
            input.form-control(type='number', v-model='stop.minutes')
        .form-group
          .col-sm-offset-10.col-sm-2
            button.btn.btn-default.form-control(type='button', v-on:click='addStop()') AddStop
        button.btn.btn-primary.btn-lg(type='button', v-on:click='submit()') Send ALL
