doctype html
html(lang=ja)
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(v-model="viewport" content="width=device-width, initial-scale=1")
    include ../template/_bootstrap
    script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.26/vue.js')
    script(src='/js/common.js')
    script(src='/js/create_account.js')
    title Create Account
  body
    .jumbotron
      h1 Create Account
    .container(role=main)
      form#createAccount.form-horizontal(@submit.prevent, @submit='submit()')
        .alert.alert-warning(role=alert, v-show='alert')
          span {{ alert }}
        .form-group
          label.col-sm-3(for='name') Name
          .col-sm-9
            input#name.form-control(type='text', v-model='name')
        .form-group
          label.col-sm-3(for='email') Email address
          .col-sm-9
            input#email.form-control(type='email', v-model='email')
        .form-group
          label.col-sm-3(for='password') Password
          .col-sm-9
            input#password.form-control(type='password', v-model='password')
        .form-group
          label.col-sm-3(for='checkPassword') Check password
          .col-sm-9
            input#checkPassword.form-control(type='password', v-model='retype')
        .form-group
          .col-sm-offset-3
            button.btn.btn-primary(type='submit') Create
