doctype html
html(lang=ja)
  head
    include ../template/_header
    script(src='/js/game/missions.js')
  body
    include ../template/_navbar
    .container(role=main)
      h1.page-header Select mission
      #missions
        form.form-inline
          label.control-label(for='rankSelector') 難易度で絞り込み
          #rankSelector.btn-group(role='group')
            button.btn.btn-default(type='button', @click='filter(undefined)', :class="{'btn-primary': !rank}") ALL
            button.btn.btn-default(type='button', @click='filter("easy")', :class="{'btn-primary': rank == 'easy'}") Easy
            button.btn.btn-default(type='button', @click='filter("medium")', :class="{'btn-primary': rank == 'medium'}") Medium
            button.btn.btn-default(type='button', @click='filter("hard")', :class="{'btn-primary': rank == 'hard'}") Hard
        ul.pagination
          li.clickable(:class='{disabled: pagination.current == 0}')
            a(aria-label='Previous', @click='next(pagination.current - 1)')
              span(aria-hidden='true') &laquo;
          li.clickable(v-for='i in pagination.last', :class='{active: pagination.current == i}')
            a(v-text='i + 1', @click='next(i)')
          li.clickable(:class='{disabled: (pagination.last - 1) <= pagination.current}')
            a(aria-label='Next', @click='next()')
              span(aria-hidden='true') &raquo;
        table.table.table-striped
          tr
            th Name
            th Start
            th Stations
            th Score
            th
          tr(v-for='m in missions')
            td
              a(v-text='m.mission.name', href='javascript:void(0)', @click.stop, @click='openModal(m.mission)')
            td(v-text='m.mission.startStation.name')
            td(v-text='m.mission.stations.length + "駅"')
            td
              template(v-if='m.score')
                span(v-text='dateFormat(m.score.time)')
                span.head-space(v-text='m.score.money + "円"')
                span.head-space(v-text='m.score.distance.toFixed(1) + "km"')
              span(v-if='!m.score') --
            td
              button.btn.btn-primary.btn-xs(@click='start(m)', v-if='!m.game') Start
              button.btn.btn-primary.btn-xs(@click='gameContinue(m)', v-if='m.game') Continue
              button.btn.btn-warning.btn-xs(@click='start(m)', v-if='m.game') Restart
      #random
        h2 Random mission
        .btn-group(role='group')
          button.btn.btn-default(type='button', @click='getRandom(6)') Easy
          button.btn.btn-default(type='button', @click='getRandom(12)') Medium
          button.btn.btn-default(type='button', @click='getRandom(24)') Hard
        #createdMission(v-if='mission')
          form.form-horizontal
            label.col-sm-3.control-label(for='missionName') Name
            .col-sm-9
              input#missionName.form-control(type='text', v-model='mission.name')
            label.col-sm-3.control-label Mission Start
            .col-sm-9
              p(v-text='mission.start.name')
            label.col-sm-3.control-label Stations
            .col-sm-9
              span.label.label-default(v-for='station in mission.stations', v-text='station.name')
            .col-offset-sm-3.col-sm-9
              button.btn.btn-primary(type='button', @click='start()') START
      .modal.fade#stationModal(role='dialog')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') &times;
              h3(v-text='mission.name')
            .modal-body
              ul
                li(v-for='station in mission.stations', v-text='station.name + "駅"')
