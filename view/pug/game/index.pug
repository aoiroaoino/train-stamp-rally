doctype html
html(lang=ja)
  head
    include ../template/_header
    script(src='/js/game/missions.js')
  body
    include ../template/_navbar
    .container(role=main)
      h1.page-header Select mission
      #missions
        table.table.table-striped
          tr
            th Name
            th Start
            th Stations
            th
          tr(v-for='mission in missions')
            td {{ mission.name }}
            td {{ mission.startStation.name }}
            td
              span.label.label-default(v-for='station in mission.stations') {{ station.name }}
            td
              button.btn.btn-primary.btn-sm(@click='start(mission)', v-if='!mission.game') Start
              button.btn.btn-primary.btn-sm(@click='gameContinue(mission)', v-if='mission.game') Continue
              button.btn.btn-warning.btn-sm(@click='start(mission)', v-if='mission.game') Restart
