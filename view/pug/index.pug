doctype html
html(lang=ja)
  head
    meta(charset="utf-8")
    include template/_bootstrap
    title Create Line
  body
    .jumbotron
      h1 Create Line
    .container(role=main)
      h3 Line
      form.form-horizontal
        .form-group
          label.col-sm-3.control-label(for="lineName") Name
          .col-sm-9
            input#lineName.form-control(type=text)
      h3 Stations
      form.form-horizontal
        .form-group
          label.col-sm-6.control-label Name
          label.col-sm-3.control-label Distance(km)
          label.col-sm-3.control-label Size
        .form-group
          .col-sm-6
            input.form-control(type=text)
          .col-sm-3
            input.form-control(type=number step=0.1 min=0.0 value=0.0)
          .col-sm-3
            select.form-control
              option(value=1) Top
              option(value=2) Major
              option(value=3) Large
              option(value=4) Middle
              option(value=5 selected=selected) Local
        .form-group
          .col-sm-2.col-sm-offset-10
            button.btn.btn-default.form-control(type=button) Add Station
      h3 Send
      form.form-inline
        button.btn.btn-primary(type=button) ALL Send
