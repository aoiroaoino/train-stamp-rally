script(src='/js/navbar.js')
.navbar.navbar-default
  .container-fluid
    .navbar-header
      a.navbar-brand(href='/') TrainStampRally
    .navbar-collapse.collapse.navbar-responsive-collapse
      ul#navs.nav.navbar-nav
        li(v-for='cat in categories', :class="{'active': cat === category}")
          a(:href='"/" + cat + "/index.html"', v-text='camelCase(cat)')
      ul#login.nav.navbar-nav.navbar-right
        li
          a(href='/auth/session.html', v-if='!logined') Login
          a(href='#', @click='logout()', v-if='logined', v-text='account.name + "(Logout)"')
